


azarrr = function(n) mean(runif(n))



s = numeric()
s1 = numeric()

for (j in 1:100){

  if (j%%10==0) cat(j, "-")
  
  t = numeric()
  for (i in 1:10000) t = c(t, azarrr(j))
  
  s = c(s, sd(t))
    
  t = numeric()
  for (i in 1:100) t = c(t, azarrr(j))
  
  s1 = c(s1, sd(t))
  
}


plot(1:100, s1, type = 'l', col = "red", lwd = 2) + lines(1:100, s, col = "blue", lwd = 2)

hist(t)


mean(t)

data.frame(a = 1:10) |> split() |> map(rnorm, n = 10, m = 0)

sd(t)
